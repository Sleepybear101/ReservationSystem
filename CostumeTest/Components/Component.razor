@using Microsoft.AspNetCore.Components.Web;
@using System.Diagnostics;
@using ReservationAdmin.Models;
@page "/button"
@using Microsoft.JSInterop;
@inject IJSRuntime JsRuntime;



<form id="form1" runat="server">
    <div id="div1" class="divs" style="background-color: #ffffff;   width: 65%; height: 37%;  margin-left: 18%; margin-top: 62px; padding: 1% 4% 7% 1%;">
        <h1>Gegevens</h1>
        <div style=" margin-left: 23px;">
            <div class="form-inline  form-group">
                <label for="Name">Volledig naam</label>
                <input type="text" asp-for="info.Name" class="form-controls1" name="Name" aria-describedby="FullName" placeholder="Volledige naam" required />

            </div>
            <div class="form-inline form-group ">
                <label for="Email" style="margin-right:10%;">Email      </label>
                <input type="email" asp-for="info.Email" class="form-controls1" name="Email" aria-describedby="emailHelp" placeholder="Email adres" required />

            </div>
            <div class="form-inline  form-group">
                <label for="InputAmount">Aantal personen</label>
                <input type="number" asp-for="info.Amount" class="form-controls1" name="Amount" aria-describedby="Amount" placeholder="0" min="1" max="6" required />
            </div>
            <input id="2" type="button" value="volgende" class="buttons" @onclick="ShowAlert" style="float:right" />
        </div>
    </div>
</form>



<form method="post">
    <div id="div2" class="divs CHidden" style="background-color: #ffffff;   width: 65%; height: 37%;  margin-left: 18%; margin-top: 62px; padding: 1% 4% 7% 1%;">
        <h1>Datum</h1>
        <div style=" margin-left: 23px;">
            <div>
                <input type="date" asp-for="info.date" class="form-controls2" name="date" aria-describedby="FullName" placeholder="Volledige naam" required />

                <div id="datepicker" data-date="today" style="margin-left: 31%; "></div>
                <input name="date" type="hidden" id="my_hidden_input" />

            </div>

            <input id="1" type="button" value="vorige" class="buttons" style="float:left" />

            <input @onclick="NextDiv" id="3" type="button" value="volgende" class="buttons" style="float:right" />
        </div>
    </div>
</form>

<form method="post">
    <div id="div3" class="divs CHidden" style="background-color: #ffffff;   width: 65%; height: 37%;  margin-left: 18%; margin-top: 62px; padding: 1% 4% 7% 1%;">

        <div  class="Daypart-div">
            <h4>Dagdeel</h4>
            <div>
                <div class="Daypart">
                    <button type="button" @onclick="(e => SelectedDaypart(false))" class="btn Daypart-btn Daypart-btn-lunch">
                        <h5>Lunch</h5>
                        <p>11:00 - 16:00</p>
                    </button>
                    <button type="button" @onclick="(e => SelectedDaypart(true))" class="btn Daypart-btn   Daypart-btn-diner">
                        <h5>Diner</h5>
                        <p>17:00 - 20:00</p>
                    </button>
                </div>

                <input id="3" type="button" value="volgende" class="buttons" @onclick="ShowAlert" style="float:right" />

            </div>
        </div>
     </div>
</form>
<form>


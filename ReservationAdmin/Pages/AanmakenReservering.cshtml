@page
@using ReservationAdmin.Component
@model CreateRes
@{
    ViewData["Title"] = "Home page";

}

    <div style=" float:left; height:100vh;  width: 17%; padding-left: 2%; background-color:#43425D;">
        <a class="navbar-brand" style="color: #ffff; font-weight: bold;">Overzicht</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <form method="post">
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse ">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item ">
                        <button class="nav-link " type="submit" name="subject" value="Dashboard">
                            <i class="fa fa-bar-chart  IconItem"></i>
                            Dashboard
                        </button>
                    </li>
                    <li class="nav-item active">
                        <button class=" nav-link  active createres" type="submit" name="subject" value="AanmakenReservering">
                            <i class="fa fa-user  IconItem"></i>
                            Aanmaken Reservering
                        </button>
                    </li>
                    <li class="nav-item  ">
                        <button class="nav-link NavAgenda " type="submit" name="subject" value="Agenda">
                            <i class="fa fa-calendar IconItem"></i>
                            Agenda
                        </button>
                    </li>
                    <li class="nav-item logout">
                        <button class="nav-link " type="submit" name="subject" value="Index">
                            <i class="fa fa-cog  IconItem"></i>
                            Uitloggen
                        </button>
                    </li>
                </ul>
            </div>
        </form>
    </div>

@(await Html.RenderComponentAsync<ReservationCreate>(RenderMode.ServerPrerendered))
@(await Html.RenderComponentAsync<Message>(RenderMode.ServerPrerendered))

<script src="_framework/blazor.server.js"></script>
<script src="~/js/site.js"></script>

